
<div class="container">
  <h1> Specific Product Page</h1>


  <div class="row">
   <div class="col-lg-8">

     <br>
     <div class="polaroid">
       <%= image_tag @product.image %>
       <div class="myContent">
         Name: <%= @product.name%>
         <br>
         Description: <%= @product.description%>
         <br>
         Price: <%= @product.price%>
       </div>
     </div>
     <hr>
   </div>
   <div class="col-lg-4">
       <%= link_to "Add Comment", new_product_comment_path(@product) %>
     <% if @product.comments.any? %>
     <h3>Comments:</h3>
       <% @product.comments.each do |comment| %>
         Title: <%= comment.title %>
         <br>
         Written by: <%= comment.author %>
         <br>
         Content: <%= comment.content %>
         <br>

         <% if is_admin? %>
           <%= link_to "Edit Comment", edit_product_comment_path(@product, comment) %> |
           <%= link_to "Delete this comment", product_comment_path(@product, comment),
                   :data => {:confirm => "Are you sure?",
                     :method => "delete"} %>

           <% end %>

       <br>
       <hr>
       <% end %>
     <% else %>
     <p>There are no comments yet!</p>
     <% end %>
   </div>
  </div>
</div>


