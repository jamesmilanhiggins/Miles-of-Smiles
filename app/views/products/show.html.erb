<h1> Specific Product Page</h1>
<br>

<%= link_to "Add Comment", new_product_comment_path(@product) %>
<br>
<%= @product.name%>
<%= @product.description%>
<%= @product.price%>
<hr>
<% if @product.comments.any? %>
  <% @product.comments.each do |comment| %>
    <p><%= comment.title %></p>
    <p><%= comment.author %></p>
    <p><%= comment.content %></p>

    <% if is_admin? %>


      <%= link_to "Edit Comment", edit_product_comment_path(@product, comment) %> |
      <%= link_to "Delete this comment", product_comment_path(@product, comment),
              :data => {:confirm => "Are you sure?",
                :method => "delete"} %>

      <% end %>

  <br>
  <hr>
  <% end %>
<% else %>
<p>There are no comments yet!</p>
<% end %>
