<h1>LIST OF ALL PRODUCTS</h1>


<hr>


<% @products.each do |product| %>

  <%= link_to product.name, product_path(product) %>
  <br>
  <%= product.name %>
  <br>
  <%= product.description %>
  <br>
  <%= product.price %>

  <% if is_admin?  %>


    <%= link_to "Edit Product", edit_user_product_path(@user, product) %> |
    <%= link_to "Delete this Product", user_product_path(@user, product),
            :data => {:confirm => "Are you sure?",
              :method => "delete"} %>

    <% end %>


  <hr>
<% end %>
