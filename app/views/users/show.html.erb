<h1>User Profile Page</h1>

<%= @user.username %>
<br>
<%= @user.email %>
<%= image_tag(@user.avatar.url(:thumb)) %>


<hr>
<%= link_to "Add Product to THIS SITE", new_user_product_path(@user) %>
<hr>
<h3>Products you have added</h3>

<% @user.products.each do |product| %>

  <%= link_to image_tag(product.avatar.url(:thumb)), product_path(product) %>
  <br>
  <%= product.name %>
  <br>
  <%= product.description %>
  <br>
  <%= product.price %>

  <% if is_admin? || is_current_user? %>


    <%= link_to "Edit Product", edit_user_product_path(@user, product) %> |
    <%= link_to "Delete this Product", user_product_path(@user, product),
            :data => {:confirm => "Are you sure?",
              :method => "delete"} %>

    <% end %>


  <hr>
<% end %>
