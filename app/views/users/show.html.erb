<h1>User Profile Page</h1>

Your username: <%= @user.username %>
<br>
Your email: <%= @user.email %>
<br>
<hr>
<% if is_admin?  %>
  <%= link_to "Add a New Product", new_user_product_path(@user) %>
<% end %>


<h3>Products you have added</h3>

<% @user.products.each do |product| %>
<div class="polaroid">
  <%= image_tag product.image %>
  <div class="myContent">
    <%= link_to "View details page", product_path(product) %>
    <br>
    Name: <%= product.name%>
    <br>
    Description: <%= product.description%>
    <br>
    Price: <%= product.price%>
    <br>
    <% if is_admin?  %>


    <%= link_to "Edit Product", edit_user_product_path(@user, product) %> |
    <%= link_to "Delete this Product", user_product_path(@user, product),
    :data => {:confirm => "Are you sure?",
      :method => "delete"} %>

      <% end %>


      <hr>
  </div>
</div>
<% end %>
